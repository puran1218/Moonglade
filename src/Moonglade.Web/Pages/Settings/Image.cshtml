@page "/admin/settings/image"
@model Moonglade.Web.Pages.Settings.ImageModel

<partial name="_SettingsHeader" />

<form id="form-settings" asp-controller="Settings" asp-action="Image"
      data-ajax-begin="onUpdateSettingsBegin"
      data-ajax-complete="onUpdateSettingsComplete"
      data-ajax-failure="onUpdateSettingsFailed"
      data-ajax-success="onUpdateSettingsSuccess"
      data-ajax="true"
      data-ajax-method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">@Localizer["General"]</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="form-check form-switch">
                            <input type="checkbox" asp-for="ViewModel.UseFriendlyNotFoundImage" class="form-check-input">
                            <label asp-for="ViewModel.UseFriendlyNotFoundImage" class="form-check-label"></label>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="form-check form-switch">
                            <input type="checkbox" asp-for="ViewModel.FitImageToDevicePixelRatio" class="form-check-input">
                            <label asp-for="ViewModel.FitImageToDevicePixelRatio" class="form-check-label"></label>
                        </div>
                    </li>
                </ul>
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 text-muted">
                        @Localizer["Watermark"]
                    </h6>
                    <div class="row">
                        <div class="col-auto">
                            <div class="form-check form-switch">
                                <input type="checkbox" asp-for="ViewModel.IsWatermarkEnabled" class="form-check-input">
                                <label asp-for="ViewModel.IsWatermarkEnabled" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="form-check form-switch">
                                <input type="checkbox" asp-for="ViewModel.KeepOriginImage" class="form-check-input">
                                <label asp-for="ViewModel.KeepOriginImage" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div>
                                <label class="form-label" asp-for="ViewModel.WatermarkText"></label>
                                <input asp-for="ViewModel.WatermarkText" class="form-control" />
                                <span asp-validation-for="ViewModel.WatermarkText" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <label class="form-label" asp-for="ViewModel.WatermarkFontSize"></label>
                                <input asp-for="ViewModel.WatermarkFontSize" class="form-control" />
                                <span asp-validation-for="ViewModel.WatermarkFontSize" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 text-muted">
                        CDN
                    </h6>
                    <div class="form-check form-switch">
                        <input type="checkbox" asp-for="ViewModel.EnableCDNRedirect" class="form-check-input">
                        <label asp-for="ViewModel.EnableCDNRedirect" class="form-check-label"></label>
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-text">@Localizer["Endpoint"]</div>
                        <input asp-for="ViewModel.CDNEndpoint" class="form-control" />
                    </div>
                    <span asp-validation-for="ViewModel.CDNEndpoint" class="text-danger"></span>
                    <small class="form-text text-muted">@Localizer["e.g. https://blog.ediwangcdn.com/ediwang-images"]</small>
                </div>
            </div>
        </div>
    </div>

    <hr />
    <div class="mb-2">
        <input id="btn-save-settings" type="submit" value="@Localizer["Save"]" class="btn btn-success" />
    </div>
</form>